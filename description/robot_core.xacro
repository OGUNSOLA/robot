<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<material name="white">
    <color rgba=" 1 1 1 1" />
   </material>
   <material name="orange">
    <color rgba=" 1 0.3 0.1 1" />
   </material>
   <material name="blue">
    <color rgba=" 0.2 0.2 1 1" />
   </material>
   <material name="black">
    <color rgba=" 0 0 0 1" />
   </material>
   <material name="red">
    <color rgba=" 1 0 0 1" />
   </material>



<!-- BASE LINK -->
   <link name="base_link">
    
   </link>

   <!-- <link name="base_footprint">   
   </link> -->

   

   <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis_link"/>
    <origin xyz="-0.08 0.0 0.0" rpy="0.0 0.0 0.0"/>
   </joint>

  <!-- CHASSIS LINK  -->
  <link name="chassis_link">
    <visual>
      <geometry>
        <box size="0.247 0.2 0.068"/>
      </geometry>
      <material name="white" />
      <origin xyz="0.1235 0.0 0.034" rpy="0.0 0.0 0.0"/>
    </visual>
     <collision>
        <geometry>
          <box size="0.247 0.2 0.068"/>
        </geometry>
        <origin xyz="0.1235 0.0 0.034" rpy="0.0 0.0 0.0"/>
      </collision>
      <xacro:inertial_box mass="0.1" x="0.247" y="0.2" z="0.068">
        <origin xyz="0.1235 0.0 0.034" rpy="0.0 0.0 0.0"/>
      </xacro:inertial_box >
  </link>

  <gazebo reference="chassis">
    <material>Gazebo/White</material>
  </gazebo>

  <!-- LEFT WHEEL -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0.1125 0" rpy="-${pi/2} 0 0"/>
  </joint>

  <link name="left_wheel_link">
    <visual>
    <geometry>
      <cylinder radius="0.03375" length="0.025"/>
    </geometry>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03375" length="0.025"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </collision>
    <xacro:inertial_cylinder mass="0.5" radius="0.0675" length="0.025" >
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </xacro:inertial_cylinder >
  </link>
  <gazebo reference="left_wheel_link">
    <material>Gazebo/Blue</material>
  </gazebo>

    <!-- RIGHT WHEEL -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <axis xyz="0 0 -1"/>
    <origin xyz="0 -0.1125  0" rpy="${pi/2} 0 0"/>
  </joint>

  <link name="right_wheel_link">
    <visual>
    <geometry>
      <cylinder radius="0.03375" length="0.025"/>
    </geometry>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03375" length="0.025"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </collision>
     <xacro:inertial_cylinder mass="0.5" radius="0.0675" length="0.025" >
           <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
     </xacro:inertial_cylinder >
  </link>

  <gazebo reference="right_wheel_link">
    <material>Gazebo/Blue</material>
  </gazebo>


    <!-- CASTER WHEEL LINK -->

  <joint name="caster_wheel_joint" type="fixed">
    <parent link="chassis_link"/>
    <child link="caster_wheel_link"/>
    <origin xyz="0.185 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>
  

  <link name="caster_wheel_link">
    <visual>
      <geometry>
        <sphere radius="0.03375"/>
      </geometry>
      <material name="red" />
    <origin xyz="0.016875 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </visual>
    <collision>
      <origin xyz="0.016875 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <sphere radius="0.03375"/>
      </geometry>
    </collision>
     <xacro:inertial_sphere mass="0.2" radius="0.03375">
      <origin xyz="0.016875 0.0 0.0" rpy="0.0 0.0 0.0"/>
     </xacro:inertial_sphere>
  </link>

</robot>